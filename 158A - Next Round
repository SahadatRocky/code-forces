
#include<bits/stdc++.h>

using namespace std;


int main(){
    
    int n,k;
    cin>>n>>k;
    int c=0;
    vector<int>v;
     for(int i=0; i < n ; i++){
     	
     	int a;
     	   cin>>a;
     	   v.push_back(a);
     	}
     	
     	int x;
     	x=v[k-1];

     	
    for(int i=0 ; i < v.size() ; i++){
    	if(v[i] == 0){
    		continue;
    		}
    	
    	 else if(v[i] > 0){
    	  if(v[i] >= x)
    	  c++;
    	  
    	  }
    	}
    
	    cout<<c<<endl;
	return 0;

}



