#include<bits/stdc++.h>
using namespace std;
int main()
{
    
   int n,a;
   cin>>n;
   vector<int>v ;
   for(int i=0;i<n;i++){
   	
   	cin>>a;
   	v.push_back(a);
   	
   	}
   	
   	double avg=0.0;
   	for(int i=0 ; i<v.size() ; i++){
   		   avg+=v[i];
   		
   		}
   		
   		avg=avg/n;
   		
   		cout<<fixed<<setprecision(12)<<avg<<endl;
   		
   		
    return 0;
}
