
#include<bits/stdc++.h>

using namespace std;

int main(){
	
	string s,r;
	string a;
	vector<char>v;
	cin>>s;
	cin>>a;
	for(int i=0;i<s.size();i++){
	 v.push_back(s[i]);
	}
	
	    reverse(v.begin(),v.end());
    
    	for(int i=0;i<v.size();i++){
     
    	  r+=v[i];
	   }
	   
	   
	  
	   if(r==a){
	   	cout<<"YES"<<endl;
	   	}
	   	else{
	   		cout<<"NO"<<endl;
	   		}
	   
	  
	   
	
  	return 0;

}



