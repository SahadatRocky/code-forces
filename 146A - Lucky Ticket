#include <bits/stdc++.h>

using namespace std;

int main()
{
    
    int n,f=0,sm=0,km=0;
    string s;
    cin>>n;
    cin>>s;
 
     n=n/2;
     
     for(int i=0,k=n; i<n; i++,k++){
     	
     	if(s[i] !='4' && s[i] != '7' ){
     		
     		   f=1;
     		   break;
     		}
     		if(s[k] != '4' && s[k] != '7'){
     			
     			f=1;
     			break;
     			
     			}
     		sm += s[i];
     		km += s[k];
 
     	}
     	
     	if(f == 0 && sm == km){
     		
     		cout<<"YES"<<endl;
     		}
     	else{
     		cout<<"NO"<<endl;
     		
     		}
     	
   
    return 0;
}
