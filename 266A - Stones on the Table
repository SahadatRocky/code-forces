#include<bits/stdc++.h>
using namespace std;
int main(){

    int n,c=0;
    cin>>n;
    string s;
    cin>>s;
    int len=s.size();
    for(int i=0; i<len; i++){
            if(s[i]=='R' && s[i+1]=='R' || s[i]=='G' && s[i+1]=='G' || s[i]=='B' && s[i+1]=='B'){
                c++;
            }
            else{
                continue;
            }
     }
     cout<<c<<endl;


 return 0;
}
