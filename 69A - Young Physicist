#include<bits/stdc++.h>
using namespace std;

 int main(){
 	
 	
 	int n,ax=0,by=0,cz=0;
 	cin>>n;
 	vector<int>x(n);
 	vector<int>y(n);
 	vector<int>z(n);
    for(int i=0;i<n;i++){
    	
    	cin>>x[i]>>y[i]>>z[i];
    	ax+=x[i];
    	by+=y[i];
    	cz+=z[i];
    	
    	}
    	
    if(ax==0 && by==0 && cz==0){
    		cout<<"YES"<<endl;
    		}
    	else{
    		cout<<"NO"<<endl;
    		}
 	
    return 0;
}
